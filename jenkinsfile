pipeline {
    agent { 
        node {
            label 'node-2'
            }
      }
    // triggers {
    //     pollSCM '*/5 * * * *'
    // }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                    npm install 
                '''
            }
        }
        stage('Run ') {
            steps {
                echo "Testing.."
                sh '''
                    node app.js
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Deliver....'
                sh '''
                    curl localhost:400
                '''
            }
        }
    }
      post {
        success {
            echo 'Build successful! You can add more post-build actions here.'
        }
        
        failure {
            echo 'Build failed. Please check the logs for details.'
        }
    }
}