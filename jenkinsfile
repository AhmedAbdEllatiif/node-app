pipeline {
    agent { 
        node {
            label 'node-2'
            }
      }
    // triggers {
    //     pollSCM '*/5 * * * *'
    // }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                    npm install 
                '''
            }
        }
        stage('Run ') {
            steps {
                echo "Testing.."
                sh '''
                    npm app.js
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Deliver....'
                sh '''
                    curl localhost:400
                '''
            }
        }
    }
}