pipeline {

    // agent node
    agent { 
        node {
            label 'node-2'
            }
      }
   
        // build stage 
        stages {
            stage('Build') {
                steps {
                    echo "Building.."
                    sh '''
                        npm install 
                    '''
                }
        }

        // run stage
        stage('Run') {
            steps {
                echo "Run.."
                sh 'node app.js & sleep 1'
                sh 'echo $! > .pidfile'
                sh 'kill $(cat .pidfile)'
            }
        }
    }


    // post
    post {
        success {
            echo 'Build successful!'
        }
    
        failure {
            echo 'Build failed. Please check the logs for details.'
        }
    }
}